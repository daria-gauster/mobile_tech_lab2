<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentA">


    <TextView
        android:id="@+id/tvBifido"
        style="@style/fragment_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Bifidobacterium"
        app:layout_constraintBottom_toTopOf="@+id/tvLacto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvLacto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Lactobacillus"
        style="@style/fragment_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBifido" />

</androidx.constraintlayout.widget.ConstraintLayout>